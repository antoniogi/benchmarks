#-----------------------------------------------------------------------
# ATTENTION:
#
# This file does not enable MPI in the binary, this is just OpenMP
# only. To enable MPI calls add -DHAVE_MPI to CPPFLAGS
#
#-----------------------------------------------------------------------

MINIFE_TYPES =  \
        -DMINIFE_SCALAR=double   \
        -DMINIFE_LOCAL_ORDINAL=int      \
        -DMINIFE_GLOBAL_ORDINAL=int

MINIFE_MATRIX_TYPE = -DMINIFE_CSR_MATRIX
# MINIFE_MATRIX_TYPE = -DMINIFE_ELL_MATRIX

#-----------------------------------------------------------------------

CFLAGS = -g -O3 -openmp -std=c++11 -restrict -vec-report=6 #-xCORE-AVX2 #-xHost
CXXFLAGS = $(CFLAGS)

CPPFLAGS = -openmp -I. -I../utils -I../fem $(MINIFE_TYPES) $(MINIFE_MATRIX_TYPE) -DHAVE_MPI

LDFLAGS=
LIBS=

CXX=mpicc
CC=mpicc

#-----------------------------------------------------------------------

include make_targets
